---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import ArtifactFeed from '../components/ArtifactFeed.astro';

const artifacts = await getCollection('artifacts');
const sortedArtifacts = artifacts
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
---

<Layout title="Artifacts_Terminal">
  <header class="mb-12 border-b border-gray-800 pb-8">
    <h1 class="text-4xl font-bold mb-4 tracking-tighter glitch-text">Artifacts_</h1>
    <p class="text-gray-500 max-w-xl">
      > 系统状态: <span class="text-green-500">在线</span><br/>
      > 存储理性思考与混沌批判。
    </p>
  </header>

  <ArtifactFeed initialArtifacts={sortedArtifacts} />
</Layout>